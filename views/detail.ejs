<h2><%= note.title %></h2>

<form class="text-form" method="POST" action="/notes/<%= note.id %>?_method=PUT">
    <label for="summernote">Content</label>
    <textarea type="text" id="summernote" name="summernote"><%= note.summernote%></textarea>
    <input type="submit" class="btn btn-primary">
</form>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>


  <!-- Initialize editor with toolbar -->
<script>

$('#summernote').summernote({
        placeholder: 'Create your new note here...',
        tabsize: 2,
        height: 100,
        width: 900
      });

  </script>