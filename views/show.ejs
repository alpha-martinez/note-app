<div class='container2'> 
   <% if(notes) { %>
      <% notes.forEach( n => { %> <br><br>
        <%= n.title %> <br>   
        <%= n.summernote %>  
        <form method="POST" action="/?_method=DELETE">
         <input type="hidden" name="id" value="<%= n.id %>" />
         <button type="submit">Remove</button>
         <form method="GET" action="/notes/new/<%= notes.folderId %> ">
            <input type="hidden" name="<% notes.folderId %>" value="<% notes.folderId %> ">
            <button type="submit">Create a note</button>
         </form>
      </form>  
      <% }) %>
      <% } %> 
   </div>
   
   

