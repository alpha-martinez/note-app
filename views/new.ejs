  <h2>Create a new note</h2>
<div class="note-2">
    <form class="text-form" method="POST" action="/notes/new">
      <label for="title">Title: </label>
      <input class="form-control" id="title" name="title" required>
      <input type="hidden" value="<%= folderID %>"  name="folderID">
      <label for="summernote">Content</label>
      <textarea type="text" id="summernote" name="summernote"></textarea>
      <input type="submit" class="btn btn-primary">
  </form>
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
</div>



  <!-- Initialize editor with toolbar -->
<script>

$('#summernote').summernote({
        placeholder: 'Create your new note here...',
        tabsize: 2,
        height: 100,
        width: 900
      });

  </script>