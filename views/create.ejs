<h2>Homepage</h2>

  <h2>Create a new note</h2>


<form action="/show" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>

  <div class="form-group">
    <label for="folder">Author</label>
    <select name="folderId" id="author" class="form-control" required>
      <% folderId.forEach(function(folderId) { %>
        <option value="<%= folderId %>"><%= folderId %></option>
      <% }) %>
    </select>
    <p>If your name doesn't show up, please <a href="/authors/new">sign up to be an author.</a></p>
  </div>

  <div>
    <label for="content">Content</label>
    <textarea id="summernote" name="editordata"></textarea>
    <input type="submit" class="btn btn-primary">
  </div> 
</form>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>


  <!-- Initialize editor with toolbar -->
<script>

$('#summernote').summernote({
        placeholder: 'Create your new note here...',
        tabsize: 2,
        height: 100,
        width: 900
      });

  </script>